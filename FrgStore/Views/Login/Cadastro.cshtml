<center>
    <h3>Cadastre-se</h3>
</center>


<div class="container">
    <a class="btn btn-danger mb-2" asp-controller="Login" asp-action="Index">Voltar</a>




    <form class="row g-3" action="" method="">
      <div class="col-md-6">
        <label class="form-label">Nome</label>
        <input type="text" class="form-control" id="nome" placeholder="nome">
      </div>
      <div class="col-md-6">
        <label class="form-label">Sobrenome</label>
        <input type="text" class="form-control" id="sobrenome" placeholder="sobrenome">
      </div>
      <div class="col-12">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" id="email" placeholder="nome@exemplo.com">
      </div>
       <div class="col-6">
        <label for="inputAddress" class="form-label">Senha</label>
        <input type="password" class="form-control" id="Senha" placeholder="senha">
      </div>
      <div class="col-6">
        <label class="form-label">Confirmar Senha</label>
        <input type="password" class="form-control" id="ConfirmarSenha" placeholder="confirmar">
      </div> 
      <div class="col-6">
           <button type="submit" class="btn btn-success">Finalizar Cadastro</button>
      </div>
    </form>
</div>