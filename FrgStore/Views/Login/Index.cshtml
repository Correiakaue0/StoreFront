                                </center>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    function Validate()
    {
         fetch("https://localhost:5001/Usuario")
        .then(resposta => resposta.json())
        .then(data => 
        {
            var u = document.getElementById("email").value;
            var p = document.getElementById("password").value;
            if(u == "" && p == ""){ 
            alert("Usuario e Senha Vazios !");
            }
                            data.forEach(function(produto, i) 
                            {
                                
                                if (u == produto.email && p == produto.senha)
                                {
                                    alert("Bem Vindo "+produto.nome);
                                    window.location.assign("Home/Carrossel");
                                }
                            });
        });
    }

</script>
